<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="https://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="30dp"
        android:background="#FFFFFF"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#FEFEFE"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/yes_no_bg1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oh No..."
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GAME OVER"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="#E1000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you want to start over?"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#CE000000"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/yes"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:src="@drawable/dialog_yes"
                    android:padding="10dp"
                   />

                <ImageView
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:src="@drawable/dialog_no"
                    android:padding="10dp"
                    />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>